        <label class="form-label">Name</label>
        <div class="form-group">
            <FeatherIcon Name="FeatherIconName.User" Class="form-icon" />
            <TextInput Placeholder="Enter your name" required />
            <Button Color="ButtonColor.Light" Size="ButtonSize.Medium" Class="form-help" TooltipTitle="This is a help text to guide user" TooltipPlacement="TooltipPlacement.Top">
                <FeatherIcon Name="FeatherIconName.HelpCircle"></FeatherIcon>
